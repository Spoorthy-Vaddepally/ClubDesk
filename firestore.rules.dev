rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access for development
    match /{document=**} {
      allow read, write: if true;
    }
    
    // Explicitly allow updates for users and clubs
    match /users/{userId} {
      allow read, write: if true;
    }
    
    match /clubs/{clubId} {
      allow read, write: if true;
    }
  }
}
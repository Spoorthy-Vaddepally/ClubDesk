rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to the club directory
    match /clubs/{clubId} {
      allow read: if true;
      // Allow authenticated users to create clubs, and owners to update/delete
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == clubId;
    }
    
    // Allow public read access to the users collection
    match /users/{userId} {
      allow read: if true;
      // Allow authenticated users to create user profiles, and owners to update/delete
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Club events - members can read, club heads can write
    match /clubs/{clubId}/events/{eventId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null && request.auth.uid == clubId;
    }
    
    // User certificates - users can read their own
    match /users/{userId}/certificates/{certificateId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow create, update, delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Club EB members - club heads can manage
    match /clubs/{clubId}/ebMembers/{memberId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null && request.auth.uid == clubId;
    }
    
    // Club members - club heads can manage
    match /clubs/{clubId}/members/{memberId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null && request.auth.uid == clubId;
    }
    
    // Club membership drives - club heads can manage
    match /clubs/{clubId}/membershipDrives/{driveId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null && request.auth.uid == clubId;
    }
    
    // Club awards - club heads can manage
    match /clubs/{clubId}/awards/{awardId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null && request.auth.uid == clubId;
    }
    
    // Event feedback - users can create, anyone can read, owners can update/delete
    match /eventFeedback/{feedbackId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Fallback rule for other collections
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}